<div class="container">	
  <div class="row centered-form">
    <div class="col-md-8 col-sm-offset-2 col-md-offset-2">
    	<div class="panel panel-default">    		    		
	 			<div class="panel-body">
	    		<h3>Register Interest</h3>
	    		<%= form_for @new_user do |form| %>
						<div class="row">
	    				<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class="form-group">	
									<%= form.text_field :first_name, :class => "form-control input-sm", :placeholder => "First Name" %>
								</div>
	    				</div>
							<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class=form"-group">
									<%= form.text_field :last_name, :class => "form-control input-sm", :placeholder => "Last Name" %>
								</div>
							</div>
						</div>	
						<div class="form-group">	
							<%= form.text_field :email, :class => "form-control input-sm", :placeholder => "Email Address" %>
						</div>					
						<%= form.submit "Register" , :class => "btn btn-info btn-block" %>
					<% end %>	
	    	</div>
  		</div>
		</div>
	</div>
</div>